    <hasActivationRequired>false</hasActivationRequired>
    <label>Recruiter Portal User</label>
    <classAccesses>
        <apexClass>RecruiterDashboardController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>RecruiterRescheduleHelper</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
