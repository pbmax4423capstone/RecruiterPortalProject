<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>RecruiterPortal Contact Read</label>
    <description>Provides read access to Contact object and common fields for Recruiter Portal users across ALC and candidate views.</description>
    <hasActivationRequired>false</hasActivationRequired>

    <!-- Contact field permissions (read-only) -->
    <!-- Include common identity and address fields to ensure UI API wires can render -->
    <!-- Note: FirstName/LastName are not FLS-configurable on Contact; omit -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.Email</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.MobilePhone</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.HomePhone</field>
        <readable>true</readable>
    </fieldPermissions>
    <!-- Omit Mailing address components: not deployable in this org config -->
    <!-- Omit Mailing address components due to compound FLS behavior -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.Personal_Email__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Contact object access -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Contact</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
</PermissionSet>
