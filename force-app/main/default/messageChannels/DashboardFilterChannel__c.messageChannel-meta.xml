<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Channel for broadcasting filter changes across unified dashboard tabs</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>Selected Sales Manager filter value</description>
        <fieldName>salesManagerFilter</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Selected date range filter (THIS_MONTH, THIS_QUARTER, THIS_YEAR)</description>
        <fieldName>dateRangeFilter</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Flag indicating manual refresh was requested</description>
        <fieldName>refreshRequested</fieldName>
    </lightningMessageFields>
    <masterLabel>DashboardFilterChannel</masterLabel>
</LightningMessageChannel>
