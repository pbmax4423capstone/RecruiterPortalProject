    <decisions>
        <name>Check_If_48_Hours_Away</name>
        <label>Check If 48 Hours Away</label>
        <locationX>402</locationX>
        <locationY>323</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_48_to_49_Hours_Away</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>HoursUntilInterview</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>48.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>HoursUntilInterview</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <numberValue>72.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop_Interviews.Reminder_48hr_Sent__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop_Interviews.Candidate__r.Email__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_48hr_Reminder_Email</targetReference>
            </connector>
            <label>Is 48 to 72 Hours Away</label>
        </rules>
    </decisions>
    <description>Sends email reminders to candidates 48 hours before their scheduled interview asking them to confirm attendance</description>
    <environments>Default</environments>
    <formulas>
        <name>ConfirmationURL</name>
        <dataType>String</dataType>
        <expression>LEFT($Api.Enterprise_Server_URL_260, FIND( '/services', $Api.Enterprise_Server_URL_260)) &amp; 'flow/Confirm_Interview_Attendance?InterviewId=' &amp; {!Loop_Interviews.Id}</expression>
    </formulas>
    <formulas>
        <name>HoursUntilInterview</name>
        <dataType>Number</dataType>
        <expression>(DATETIMEVALUE({!Loop_Interviews.Date_Time_Scheduled__c}) - NOW()) * 24</expression>
        <scale>2</scale>
    </formulas>
