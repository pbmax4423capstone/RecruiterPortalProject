<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <description>Automatically sets the Candidate Name field to First_Name__c + &apos; &apos; + Last_Name__c when a candidate is created or updated.</description>
    <environments>Default</environments>
    <formulas>
        <name>CandidateFullName</name>
        <dataType>String</dataType>
        <expression>IF(
    AND(NOT(ISBLANK({!$Record.First_Name__c})), NOT(ISBLANK({!$Record.Last_Name__c}))),
    {!$Record.First_Name__c} &amp; &quot; &quot; &amp; {!$Record.Last_Name__c},
    IF(NOT(ISBLANK({!$Record.First_Name__c})),
        {!$Record.First_Name__c},
        IF(NOT(ISBLANK({!$Record.Last_Name__c})),
            {!$Record.Last_Name__c},
            {!$Record.Name}
        )
    )
)</expression>
    </formulas>
    <interviewLabel>Set Candidate Name Auto {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Set Candidate Name Auto</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Candidate_Name</name>
        <label>Update Candidate Name</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>CandidateFullName</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Candidate_Name</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>First_Name__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Last_Name__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Candidate__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
