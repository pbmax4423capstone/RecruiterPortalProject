    <assignments>
        <name>Assign_to_Compliance_Issue_Collection</name>
        <label>Assign to Compliance Issue Collection</label>
        <locationX>264</locationX>
        <locationY>468</locationY>
        <assignmentItems>
            <assignToReference>$Record.Compliance_Issue__c</assignToReference>
